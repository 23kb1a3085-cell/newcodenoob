
// 1. Function Declaration
function greetDeclaration(name) {
    return `Hello, ${name}! This is a function declaration.`;
}

// 2. Function Expression
const greetExpression = function(name) {
    return `Hello, ${name}! This is a function expression.`;
};

// 3. Arrow Function
const greetArrow = (name) => {
    return `Hello, ${name}! This is an arrow function.`;
};

// Calling the functions
console.log(greetDeclaration("Alice"));
console.log(greetExpression("Bob"));
console.log(greetArrow("Charlie"));
